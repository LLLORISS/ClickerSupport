<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="nm.cs.clickersupport.ChangeClickerTypeController"
            prefHeight="500.0" prefWidth="400.0">

    <VBox layoutX="50.0" layoutY="50.0" spacing="20.0">
        <Text text="Select Clicker type" styleClass="header-text"/>

        <HBox spacing="10.0">
            <Button fx:id="tooltipButtonClicking" text="?" styleClass="tooltip-button"/>
            <CheckBox fx:id="checkBoxClicking" text="Clicking"/>
        </HBox>

        <HBox spacing="10.0">
            <Button fx:id="tooltipButtonGradual" text="?" styleClass="tooltip-button"/>
            <CheckBox fx:id="checkBoxGradual" text="Gradual" />
        </HBox>

        <HBox spacing="10.0">
            <Button fx:id="tooltipButtonOneTime" text="?" styleClass="tooltip-button"/>
            <CheckBox fx:id="checkBoxOneTime" text="One Time" />
        </HBox>
        <HBox spacing="10.0">
            <Button fx:id="tooltipButtonRecording" text="?" styleClass="tooltip-button"/>
            <CheckBox fx:id="checkBoxRecording" text="Recording" />
        </HBox>
        <HBox spacing="10.0">
            <Button fx:id="tooltipButtonReplaying" text="?" styleClass="tooltip-button"/>
            <CheckBox fx:id="checkBoxReplaying" text="Replaying" />
        </HBox>
    </VBox>

    <Button text="Confirm" fx:id="confirmButton" onAction="#confirmChangeButton"
            AnchorPane.leftAnchor="150" AnchorPane.rightAnchor="150" AnchorPane.bottomAnchor="20"
            prefWidth="100.0" styleClass="button"/>

</AnchorPane>
