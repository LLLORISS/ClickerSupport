<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="nm.cs.clickersupport.ChangeParametersController"
            prefHeight="500.0" prefWidth="400.0">

    <Label text="Clicks count:" layoutX="20" layoutY="30" styleClass="label-subtitle" />
    <TextField fx:id="clicksField" layoutX="180" layoutY="30" prefWidth="200" />

    <Label text="Interval:" layoutX="20" layoutY="80" styleClass="label-subtitle" />
    <TextField fx:id="intervalField" layoutX="180" layoutY="80" prefWidth="200" />

    <Button text="Save" onAction="#saveParameters" defaultButton="true"
            AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="110" AnchorPane.rightAnchor="110"/>
</AnchorPane>
